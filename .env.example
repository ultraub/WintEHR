# ============================================================================
# DATABASE CREDENTIALS (REQUIRED)
# ============================================================================
# PostgreSQL credentials for HAPI FHIR and backend services
# SECURITY: Generate strong random passwords for production!
# Generate with: openssl rand -base64 32

# Database username
POSTGRES_USER=emr_user

# Database password (CHANGE THIS!)
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# Database name (should match config.yaml)
POSTGRES_DB=emr_db

# Database connection URL (constructed from above)
DATABASE_URL=postgresql://emr_user:CHANGE_ME_TO_SECURE_PASSWORD@postgres:5432/emr_db

# ============================================================================
# APPLICATION SECRETS (REQUIRED)
# ============================================================================
# Generate unique secrets for each deployment!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(50))"

# Django/FastAPI secret key
SECRET_KEY=CHANGE_ME_TO_RANDOM_SECRET_KEY

# JWT configuration
JWT_ENABLED=false
JWT_SECRET=CHANGE_ME_TO_RANDOM_JWT_SECRET
JWT_SECRET_KEY=CHANGE_ME_TO_RANDOM_JWT_SECRET
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# API URLs
API_URL=http://localhost:8000

# WebSocket
WS_URL=ws://localhost:8000/api/ws

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost

# DICOM
DICOM_STORAGE_PATH=/app/dicom_storage

# Environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO

# Redis (if using)
REDIS_URL=redis://localhost:6379

# ============================================================================
# OPTIONAL API KEYS
# ============================================================================
# These are optional - uncomment and add keys if using these services

# Claude/Anthropic API (for AI features)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Tavily API (for AI-powered web research)
# TAVILY_API_KEY=your_tavily_api_key_here

# AWS (if using S3 storage or other AWS services)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# ============================================================================
# DEPLOYMENT NOTE
# ============================================================================
# After copying this file to .env:
# 1. Generate secure passwords for POSTGRES_PASSWORD
# 2. Generate unique secrets for SECRET_KEY and JWT_SECRET
# 3. Update DATABASE_URL with the new password
# 4. Verify all CHANGE_ME values are replaced
# 5. Never commit .env file to version control!