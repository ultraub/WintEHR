# FHIR Configuration
# Point to any FHIR R4 compliant server

# Local MedGenEMR FHIR server (default)
REACT_APP_FHIR_ENDPOINT=http://localhost:8000/fhir/R4

# Example: HAPI FHIR public test server
# REACT_APP_FHIR_ENDPOINT=https://hapi.fhir.org/baseR4

# Example: SMART Health IT sandbox
# REACT_APP_FHIR_ENDPOINT=https://launch.smarthealthit.org/v/r4/fhir

# Example: Synthea public test server
# REACT_APP_FHIR_ENDPOINT=https://synthea.mitre.org/fhir

# EMR Extensions Configuration
# Set to 'false' to disable EMR-specific features
REACT_APP_EMR_FEATURES=true
REACT_APP_EMR_API=http://localhost:8000/api/emr

# Clinical Canvas
# Can work with any FHIR server but requires API key for Claude
REACT_APP_CLINICAL_CANVAS_API=http://localhost:8000/api/clinical-canvas

# Authentication
# For external FHIR servers that require authentication
# REACT_APP_FHIR_AUTH_TYPE=oauth2
# REACT_APP_FHIR_CLIENT_ID=your-client-id
# REACT_APP_FHIR_AUTH_SCOPE=patient/*.read

# Features
# Enable/disable specific features based on FHIR server capabilities
REACT_APP_ENABLE_SEARCH=true
REACT_APP_ENABLE_HISTORY=true
REACT_APP_ENABLE_OPERATIONS=true
REACT_APP_ENABLE_BATCH=true