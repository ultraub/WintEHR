{
  "compilerOptions": {
    // Target modern browsers
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "ES2020"
    ],

    // Module system
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "resolveJsonModule": true,

    // JSX support
    "jsx": "react-jsx",

    // JavaScript interop (for gradual migration)
    "allowJs": true,
    "checkJs": false,

    // Type checking strictness (progressive strictness plan)
    // Phase 1 (Weeks 1-4): Start with relaxed settings - COMPLETED
    // Phase 2 (Weeks 5-8): Enable noImplicitAny - ACTIVE
    "strict": false,
    "noImplicitAny": true,
    "strictNullChecks": false,
    // Phase 3 (Weeks 9-12): Enable strictNullChecks
    // Phase 4 (Post): Full strict: true

    // Additional type safety (enabled from start)
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noUncheckedIndexedAccess": false,

    // Build settings
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,

    // Path mapping
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["components/*"],
      "@/services/*": ["services/*"],
      "@/hooks/*": ["hooks/*"],
      "@/utils/*": ["utils/*"],
      "@/constants/*": ["constants/*"],
      "@/contexts/*": ["contexts/*"],
      "@/core/*": ["core/*"],
      "@/types/*": ["types/*"]
    },

    // Declaration files
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}