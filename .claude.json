{
  "mcpServers": {
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/robertbarrett/Library/Mobile Documents/com~apple~CloudDocs/dev/MedGenEMR"
      ],
      "description": "File system access for WintEHR project"
    },
    "memory": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "description": "In-memory storage for temporary data and caching"
    },
    "postgres": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "postgresql://emr_user:emr_password@localhost:5432/emr_db"
      ],
      "description": "Direct PostgreSQL access for FHIR database queries"
    },
    "sequential-thinking": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "description": "Complex task planning and architectural decisions"
    },
    "github": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub integration for issues, PRs, and repository management"
    }
  },
  "enableAllProjectMcpServers": false,
  "enabledMcpjsonServers": [
    "filesystem",
    "memory",
    "sequential-thinking"
  ],
  "disabledMcpjsonServers": [
    "postgres",
    "github"
  ]
}